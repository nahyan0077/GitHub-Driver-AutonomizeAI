{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,        
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist"            
  },
  "include": ["src/**/*.ts"],              
  "exclude": ["node_modules", "**/*.spec.ts"]
}
